{
    "name": "ttrpg-environment",
    "version": "a.0.22",
    "description": "A plugin development template for devs who want to use svelte in Obsidian.",
    "main": "main.js",
    "type": "module",
    "jest": {
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ],
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "transform": {
            "^.+\\.(ts)$": "ts-jest"
        },
        "testMatch": [
            "**/*.test.ts",
            "**/*.test.js"
        ]
    },
    "scripts": {
        "style": "sass ./modules/styles.scss styles.css",
        "lint": "eslint . --ext .ts",
        "dev": "vite build --watch",
        "vite": "vite build --watch",
        "build": "npx svelte-check && vite build",
        "bumpversion": "node version-bump.mjs && git add manifest.json versions.json",
        "test": "jest --coverage"
    },
    "keywords": [],
    "author": "Grobax",
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@tsconfig/svelte": "^5.0.4",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.4.1",
        "@typescript-eslint/eslint-plugin": "8.2.0",
        "@typescript-eslint/parser": "8.2.0",
        "builtin-modules": "4.0.0",
        "eslint": "^9.9.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "jest": "^29.7.0",
        "obsidian": "latest",
        "sass": "^1.77.8",
        "svelte": "^4.2.18",
        "svelte-check": "^3.8.5",
        "svelte-preprocess": "^6.0.2",
        "ts-jest": "^29.2.4",
        "tslib": "^2.6.3",
        "typescript": "^5.5.4",
        "vite": "^5.4.2"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "handlebars": "^4.7.8",
        "jszip": "^3.10.1",
        "reflect-metadata": "^0.2.2",
        "yaml": "^2.5.0"
    }
}
